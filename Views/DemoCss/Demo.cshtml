
@{
    ViewBag.Title = "Demo";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<link href="~/Content/css/styleDangNhap.css" rel="stylesheet" />
<div style="height:500px">
    <br />
    <input type="button"  value="Đăng nhập" id="btnDangNhap" class="btn btn-primary"/>
    <div id="popup_login">
        <div class="login-form" id="login-form">
            <div style="clear:both;text-align:right;margin-bottom:0">
                <span id="close-form" class="btn btn-danger">X</span>
            </div>
            <h2>Đăng Nhâp</h2>
            <div class="form-info">
                <form>
                    <input class="email" placeholder="Tên đăng nhập" required="" type="text"/>
                    <input class="password" placeholder="Mật khẩu" required="" type="password" />
                    <p><a href="#">Quên mật khẩu?</a></p>
                    <ul class="login-buttons">
                        <li><input value="Đăng nhập" type="submit" id="btnDangNhap1"/></li>
                        <li><a href="#" class="hvr-sweep-to-left">Đăng ký</a></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    #btnDangNhap{
        float:left;
    }
    .content{
        height:500px
    }

    #close-form{
        color:white;
    }

    #popup_login{
        position:fixed;
        background-color:rgb(0,0,0,.5);
        top:0;
        left:0;
        width:100%;
        height:100%;
        z-index:99;
        display:none
    }

    #login-form{
        background:#3a3a46;
        cursor:pointer;
    }
</style>

<script type="text/javascript">
    $("#btnDangNhap").click(function() {
        $("#popup_login").show();
    });

    $("#close-form").click(HideForm);

    function HideForm() {
        $("#popup_login").hide();
    }
</script>